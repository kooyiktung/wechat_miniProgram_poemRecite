page {
  height: 100%;
}

.box1 {
  width: 100%;
  height: 170rpx;
  padding: 40rpx;
  background-color: white;
}

.box2Fix {
  height: 80rpx;
  background-color: white;
  top: 0rpx;
  position: fixed;
  z-index: 99;
}

.box2 {
  /* width: 98%; */
  height: 80rpx;
  background-color: white;
  top: 170rpx;
  /* border-bottom: 1px solid rgba(91,91,91,0.5); *//* background-color: antiquewhite;
  border: 2rpx red solid; *//* margin : 2rpx auto; */

.dailyContainer {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  /* background-color: #8f8f8f; */
}

.dailyPanel {
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.memberBox {
  margin-top: 1rpx;
  background-color: #fff;
}

.memberBox view {
  width: 710rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #f6f6f6;
  float: left;
}

.memberBox image {
  width: 100rpx;
  height: 100rpx;
  float: left;
  border-radius: 100rpx;
}

.memberBox text {
  width: 250rpx;
  padding: 25rpx;
  font-size: 35rpx;
  text-align: left;
  float: left;
}

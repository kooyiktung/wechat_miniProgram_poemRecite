.groupImg image {
  width: 25%;
  height: 180rpx;
  float: left;
  border-radius: 20rpx;
  /* background-color: green; *//* margin: 0 0 0 40rpx; */
}

.groupMsg {
  width: 70%;
  height: 50rpx;
  float: right;
  color: #b5b5b5;
  line-height: 50rpx;
  /* background-color: peru; */
}

.tab {
  float: left;
  width: 10%;
  text-align: center;
  padding: 10rpx 0;
  margin-left: 30rpx;
  font-weight: bold;
  color: #dbdbdb;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 8rpx solid #0094ff;
  border-radius: 3rpx;
  color: #0094ff;
}

.swiper {
  width: 100%;
}


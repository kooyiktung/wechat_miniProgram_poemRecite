.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.btn {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
    background-color: #0094FF;
    color: #fff;
}
.tab {
    float: left; 
    width: 20%;
    text-align: center;
    padding: 10rpx 0; 
    font-weight: bold;
}

.topTabSwiper:after {
    content: ""; 
    clear: both;
    display: block;
}

.tabBorer {
    border-bottom: 5rpx solid #0094FF; 
    color: #0094FF;
}

.swiper {
    width: 100%;
    height: 600px;
}

.swiper_box,.review_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.swiper_box1 {
  border: 5rpx solid #FFAD01;
  display: flex;
  flex-direction: column;
  justify-content: flex-start; /* 左对齐 */
  margin: 0 auto;
  border-radius: 20rpx;
  /* text-align: center;  */
  width: 80%; 
  height: 25%; 
  padding: 20rpx;
}
.today_detail {
  font-weight: bold;
  margin-bottom: 10rpx;
}
.today_cal {
  width: 100%;
  /* padding-top: 30rpx; */
}
.task {
  font-size: 0.8rem;
  margin-bottom: 8rpx;
}

.swiper_box2 {
  border: 5rpx solid #0094FF;
  display: flex;
  /* align-items: center; */
  justify-content: center; 
  margin-top: 50rpx;
  border-radius: 20rpx;
  width: 80%; 
  height: auto; 
  padding: 20rpx;
}

.review_box1,.review_box2{
  width: 90%;
  height: 400rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.review_box1 {
  border: 5rpx solid #FFAD01;
  /* margin-top: -100rpx; */
}

.review_box2 {
  border: 5rpx solid #0094FF;
  margin-top: 60rpx;
}

.review_innerbox {
  width: 100%;
  /* border:1px solid #F00;
  background:#FF0;  */
  overflow:hidden;
}

.review_innferboxleft,.review_innferboxright {
  width: 48%;
  height: 160px;
  /* border: 1px solid #00F;
  background:#FFF; */
}

.review_innferboxleft {
  float: left;
}

.review_innferboxright {
  float: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.txt1,.txt2{
  width: 100%;
  height: 100rpx;
  margin: 30rpx 0 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  /* border:1px solid #F00;
  background:#FF0;  */
}

.pic {
  width: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  /* border:1px solid #F00;
  background:#FF0;  */
}

.pic1,.pic2 { 
  width: 50%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background:#FFF; */
}

.pic1 {
  float: left;
}

.pic2 {
  float: right;
  font-weight: bolder;
}

.pic1 image{
  width: 32px;
  height: 32px;
}